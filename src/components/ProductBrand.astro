---
import { Image } from "astro:assets";

const brands = [
  {
    id: 1,
    merk: "Canon",
    imageUrl: "/merk/merk-canon.png"
  },
  {
    id: 2,
    merk: "Epson",
    imageUrl: "/merk/merk-epson.png"
  },
  {
    id: 3,
    merk: "Samsung",
    imageUrl: "/merk/merk-samsung.png"
  },
  {
    id: 4,
    merk: "Xerox",
    imageUrl: "/merk/merk-xerox.png"
  },
  {
    id: 5,
    merk: "Brother",
    imageUrl: "/merk/merk-brother.png"
  },
  ]
---

<div class="mx-2 overflow-hidden whitespace-nowrap lg:mx-48">
  <div class="inline-flex w-max md:animate-none animate-[scroll-left_20s_linear_infinite] gap-8 lg:gap-16">
  {brands.map(brand => (
    <Image src={brand.imageUrl} alt={brand.merk} width={100} height={50} class="scale-75 cursor-pointer h-fit grayscale-100 hover:grayscale-0 lg:scale-100"/>
  ))}
</div>


<!-- css -->
<style>
  @keyframes scroll-left {
    0% { transform: translateX(0%); }
    100% { transform: translateX(-50%); }
  }
</style>